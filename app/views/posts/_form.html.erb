<%= form_for @post, html: { multipart: true } do |f| %>

	<% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |error| %>
        	<p><%= error %></p>
        <% end %>
  	<% end %>

	<p class="qac_body">
		<%= f.label :title %> <br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %> <br>
		<%= f.text_area :body %>
	</p>
	<br>
	<p><%= f.file_field :image, as: :file  %></p>
	<p><%= link_to image_tag(@post.image.url(:med)), @post.image.url %></p>
	<p>
	<br>
		<%= f.submit %>
	</p>
<% end %>