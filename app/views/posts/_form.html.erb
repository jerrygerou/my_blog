<%= form_for @post do |f| %>

	<% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |error| %>
        	<p><%= error %></p>
        <% end %>
  	<% end %>

	<p class="qac_body">
		<%= f.label :title %> <br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %> <br>
		<%= f.text_area :body %>
	</p>
	<br>
	<p>
		<%= f.submit %>
	</p>
<% end %>